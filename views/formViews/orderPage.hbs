<div
  id="custom-alert"
  class="alert alert-danger alert-dismissible fade show"
  role="alert"
  style="display: none;"
>
  <strong>Holy guacamole!</strong>
  <button
    type="submit"
    class="close"
    data-dismiss="alert"
    aria-label="Close"
    onclick="closeCustomAlert()"
  >
    <span aria-hidden="true">&times;</span>
  </button>
</div>

<section class="order-form m-4">
  <div class="container pt-4">

    <div class="row">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="/images/pngg.png" class="img-fluid" alt="Sample image" />
      </div>

      <div class="col-12 px-4">
        <h1> Order </h1>
        <p style="color: red;"> <strong>{{msg}}</strong> </p>

        <p style="color: red;"> <strong> {{errorMessage}}</strong> </p>

        <hr class="mt-1" />
      </div>

      <div class="col-12">
        <form action="/some" method="POST" onsubmit="return validateForm()">
          <fieldset>
            <legend> Information</legend>
            <div class="row mx-4">
              <div class="col-12">
                <label class="order-form-label">Name</label>
              </div>
              <div class="col-sm-6">
                <div class="form-outline">
                  <input
                    required
                    type="text"
                    class="form-control order-form-input"
                    name="firstName"
                    id="firstName"
                  />
                  <label class="form-label" for="form1">First</label>
                </div>
              </div>
              <div class="col-sm-6 mt-2 mt-sm-0">
                <div class="form-outline">
                  <input
                    required
                    type="text"
                    class="form-control order-form-input"
                    name="lastName"
                    id="lastName"
                  />
                  <label class="form-label" for="form2">Last</label>
                </div>
              </div>
            </div>

            <div class="row mt-3 mx-4">
              <div class="col-12">
                <label class="order-form-label"> Valid Email Address</label>
              </div>
              <div class="col-12">
                <div class="form-outline">
                  <input
                    required
                    type="email"
                    class="form-control order-form-input"
                    name="email"
                    id="email"
                  />
                </div>
              </div>
            </div>

            <div class="row mt-3 mx-4">
              <div class="col-12">
                <label class="order-form-label">Phone</label>
              </div>
              <div class="col-12">
                <div class="form-outline">
                  <input
                    required
                    type="phone"
                    id="phone"
                    class="form-control order-form-input"
                    name="phone"
                  />
                </div>
              </div>
            </div>
          </fieldset>

          <fieldset>
            <legend> Our Offer</legend>
            <div class="row mt-3 mx-4">

              <div class="mb-3">
                <select
                  class="form-select"
                  aria-label="Default select example"
                  name="select"
                >
