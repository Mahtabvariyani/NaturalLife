  <body style="margin-left: 60px;margin-right:60px">
    <nav
      class="navbar navbar-expand-lg bg-body-tertiary"
      style="margin-bottom: 20px;"
    >
      <div class="container-fluid">
        <a class="navbar-brand" href="#"><img
            style="width:35px;"
            src="/images/organic.png"
            alt=""
          /></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarScroll"
          aria-controls="navbarScroll"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarScroll">
          <ul
            class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll"
            style="--bs-scroll-height: 100px;"
          >
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/"><img
                  style="width:30px;"
                  src="/images/home.png"
                  alt=""
                /></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/signIn"><img
                  style="width:30px;"
                  src="/images/user.png"
                  alt=""
                /></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/orderPage"><img
                  style="width:30px;"
                  src="/images/shop.png"
                  alt=""
                /></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/filingForm"><img
                  style="width:32px;"
                  src="/images/email.png"
                  alt=""
                /></a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="/reviewPage"><img
                  style="width:35px;"
                  src="/images/review.png"
                  alt=""
                /></a>
            </li>

            <li id="to-right">
              <form action="/signOut" method="POST">
                <button><img
                    src="/images/signoutt.png"
                    alt=""
                    style="width:30px;margin-top:9px;margin-right:5px;"
                  /></button>
              </form>
            </li>

          </ul>
          <div
            class="form-control me-2"
            style="width: 300px;background-color:rgb(246, 246, 246);border:none;"
          >
            <form action="/weather" method="POST">

              {{#if error}},
                {{error}}
              {{else if weather}}
                <i class="fas fa-thermometer-half"></i>
                {{weather.main.temp}}&deg;F

                <i class="fas fa-cloud"></i>
                {{weather.weather.0.main}}

                <i class="fas fa-map-marker-alt"></i>
                {{weather.name}},
                {{weather.sys.country}}

              {{/if}}
            </form>

          </div>

          <form
            class="d-flex"
            action="/weather"
            method="POST"
            role="search"
            id="weatherForm"
          >
            <input
              id="query"
              name="city"
              class="form-control"
              type="search"
              placeholder="Weather Search"
              aria-label="Search"
            />
            <button class="btn btn-outline-success">Search</button>
          </form>

        </div>
      </div>
    </nav>

    {{{body}}}

