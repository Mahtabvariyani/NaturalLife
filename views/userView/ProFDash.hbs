<section class="vh-75" style="background-color: #f1f1f1;">
  {{#if user}}
    <div class="container py-15 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-md-9 col-lg-7 col-xl-15">
          <div class="card" style="border-radius: 10px;">
            <div class="card-body p-6 h-130">
              <div class="d-flex text-black">
                <div class="flex-shrink-0">
                  <img
                    src="{{user.image}}"
                    alt="Generic placeholder image"
                    class="img-fluid"
                    style="width: 180px; border-radius: 100px;"
                  />
                </div>
                <div class="flex-grow-1 ms-1">
                  <h5 class="mb-1">
                    <strong>Welcome ,</strong>
                    {{user.username}}
                  </h5>
                  <p class="mb-12 pb-1" style="color: #2b2a2a;">
                    <strong>Email:</strong>{{user.email}}
                  </p>
                  <div class="d-flex justify-content-start rounded-3 p-2 mb-2">
                    <div class="d-flex justify-content-start">
                      <a href="#!"><i
                          class="fab fa-facebook-f fa-lg me-3"
                        ></i></a>
                      <a href="#!"><i class="fab fa-twitter fa-lg me-3"></i></a>
                      <a href="#!"><i class="fab fa-instagram fa-lg"></i></a>
                    </div>
                  </div>
                  <form
                    action="/ProFDash"
                    method="POST"
                    enctype="multipart/form-data"
                  >
                    <div class="form-group rounded-2 p-1" style="display:flex;">
                      <label for="image">
                        <strong>Change the Profile Pic: </strong>
                      </label>
                      <input
                        style="height:40px;width:220px;border:0.5px solid orange;"
                        type="file"
                        class="form-control"
                        id="image"
                        name="imageUrl"
                        accept="image/png, image/jpg"
                      />
                      <button
                        style="margin-left: 9px;"
                        type="submit"
                        class="btn btn-warning"
                      >Upload</button>
                    </div>

                  </form>

                  <div
                    class="d-flex justify-content-start rounded-3 p-2 mb-2"
                    style="background-color: #fdecc7;"
                  >
                    <div>
                      <p class="small text-muted mb-1">
                        <strong>in Process</strong>
                      </p>
                      <p class="mb-0">1</p>
                    </div>
                    <div class="px-3">
                      <p class="small text-muted mb-1">
                        <strong>Recieved Order</strong>
                      </p>
                      <p class="mb-0">1</p>
                    </div>
                    <div>
                      <p class="small text-muted mb-1"><i
                          class="fa-solid fa-box"
                        ></i>
                        <strong>Total Order</strong>
                      </p>
                      <p class="mb-0">{{orderCount}} </p>
                    </div>
                  </div>
                  <div class="d-flex pt-1">
                    <button
                      type="button"
                      class="btn btn-outline-warning me-1 flex-grow-1"
                    ><a
                        href="/formViews/filingForm"
                        style="color: rgb(232, 154, 10);"
                      >Contact Us</a></button>
                    <button
                      type="button"
                      class="btn btn-warning flex-grow-1"
                    >Follow</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  {{else}}
    <p>Still no logged-in user, sorry!</p>
  {{/if}}
</section>