{{!-- 
{{#if user}}
  <h2>Welcome Back, {{ user.username }}</h2>
  <p>This is your profile page my friend!</p>
  <button>
    <a href="/ProFDash">Reload the page</a>
  </button>
{{else}}
  <p>Still no logged in user, sorry!</p>
{{/if}} --}}

<section style="margin-bottom: 20px;">
  {{#if user}}
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-9 col-lg-7 col-xl-5">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-4">
              <div class="d-flex text-black">
                <div class="flex-shrink-0">
                  <img
                    src="{{user.image}}"
                    alt="User Profile Picture"
                    class="img-fluid"
                    style="width: 180px; border-radius: 10px;"
                  />
                </div>
                <div class="flex-grow-1 ms-3">
                  <h5 class="mb-1">Welcome Back,{{user.username}} {{ userInSession.username }}</h5>
                  <p class="mb-2 pb-1" style="color: #2b2a2a;">Senior Journalist</p>
                  <div
                    class="d-flex justify-content-start rounded-3 p-2 mb-2"
                    style="background-color: #efefef;"
                  >
                  </div>
                  <form
                    action="/ProFDash"
                    method="POST"
                    enctype="multipart/form-data"
                  >
                    <div class="form-group">
                      <label for="image">Update Profile Picture</label>
                      <input
                        type="file"
                        class="form-control"
                        id="image"
                        name="image"
                      />
                    </div>
                    <button
                      type="submit"
                      class="btn btn-primary"
                    >Upload</button>
                  </form>
                  <div class="d-flex pt-1">
                    <button
                      type="button"
                      class="btn btn-outline-primary me-1 flex-grow-1"
                    ><a href="/formViews/filingForm.hbs">Contact Us</a></button>
                    <button
                      type="button"
                      class="btn btn-primary flex-grow-1"
                    >Your Order</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  {{else}}
    <p>Still no logged-in user, sorry!</p>
  {{/if}}
</section>