<div class="card text-center mb-5">

  <div class="card-body">
    <h5 class="card-title">Feel Free to Leave Us a a Comment , Review...</h5>
    <p class="card-text">You have Specific Question?We Are Always Reachable
      ...Contact Us
    </p>
    <a href="../../formViews/filingForm" class="btn btn-primary">Contact Form</a>
  </div>

</div>

<section style="background-color: #eee;">
  <div class="container my-5 py-5">
    <div class="row d-flex justify-content-center">

      <div class="col-md-12 col-lg-10 col-xl-8">
        <div class="card">
          <div class="card-body">
            <form action="/reviewPage" method="POST">
              <div class="form-group border border-gray">
                <input
                  type="text"
                  name="name"
                  placeholder="Your Name"
                  class="form-control mb-2"
                  required
                />
                <textarea
                  name="text"
                  class="form-control"
                  placeholder="Leave a comment here"
                  id="floatingTextarea2"
                  rows="4"
                  required
                ></textarea>
                <input type="hidden" name="pageId" />
                <button class="btn rounded-10 btn-primary mt-3 btn-sm">Post
                  comment</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


<div class="row d-flex justify-content-center">
  <div class="comments"  >
    {{#each comments}}
      <div class="comment" style="border: 0.5px solid darkgray;padding:10px">

        <div
          class="d-flex flex-start w-100 d-flex flex-start align-items-center"
         style="background-color: #f8f9fa;">
          <img
            class="rounded-circle shadow-1-strong me-3"
            src="https://avatar-management--avatars.us-west-2.prod.public.atl-paas.net/default-avatar.png"
            alt="avatar"
            width="50"
            height="50"
          />
          <h6 class="fw-bold text-primary mb-1" >{{this.Name}}</h6>
        </div>
        <p class="mt-3 mb-4 pb-2">{{this.text}}</p>
        <div class="small d-flex justify-content-start" style="background-color: #f8f9fa;">
          <a href="#!" class="d-flex align-items-center me-3">
            <i class="far fa-thumbs-up me-2"></i>
            <p class="mb-0">Like</p>
          </a>
          <a href="#!" class="d-flex align-items-center me-3">
            <i class="far fa-comment-dots me-2"></i>
            <p class="mb-0">Comment</p>
          </a>
          <a href="#!" class="d-flex align-items-center me-3">
            <i class="fas fa-share me-2"></i>
            <p class="mb-0">Share</p>
          </a>
          <a href="/userView/editComments/{{this._id}}"><button
              class="btn btn-primary btn-sm"
            >Edit</button></a>
          <form action="/reviewPage/{{this._id}}/delete" method="POST">
            <button class="btn btn-danger btn-sm">Delete</button>
          </form>

        </div>
   

      </div>
           <div
          class="card-footer py-3 border-0"
          style="background-color: #f8f9fa;"
        >
        </div>

      {{#if this.isEditing}}
        <form action="/reviewPage" method="POST">
          <div class="form-group">
            <textarea
              name="editedText"
              class="form-control"
              style="height: 100px"
            >{{this.text}}</textarea>
          </div>
          <input type="hidden" name="commentId" value="{{this._id}}" />
          <button class="btn btn-primary">Save</button>
        </form>
      {{/if}}
    {{/each}}
  </div>
</div>