<div class="card text-center mb-5">

  <div class="card-body">
    <h5 class="card-title">Feel Free to Leave Us a a Comment , Review...</h5>
    <p class="card-text">You have Specific Question?We Are Always Reachable ...Contact Us </p>
    <a href="../../formViews/filingForm" class="btn btn-primary">Contact Form</a>
  </div>

</div>

  <div class="container">
  <form action="/reviewPage" method="POST">
    <div class="form-group border border-gray">
      <input
        type="text"
        name="name"
        placeholder="Your Name"
        class="form-control mb-2"
        required
      />
      <textarea
        name="text"
        class="form-control"
        placeholder="Leave a comment here"
        id="floatingTextarea2"
        style="height: 100px"
        required
      ></textarea>
      <input
        type="hidden"
        name="pageId" 
      />
      <button class="btn rounded-10 btn-primary mt-3">Post</button>
    </div>
  </form>

  <div class="comments">
    {{#each comments}}
      <div class="comment">
        <h3>{{ this.Name }}</h3>
        <p>{{ this.text }}</p>
        <a href="/userView/editComments/{{ this._id }}"><button class="btn btn-primary">Edit</button></a>
         <form action="/reviewPage/{{ this._id }}/delete" method="POST">
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
      {{#if this.isEditing}}
        <form action="/reviewPage" method="POST">
          <div class="form-group">
            <textarea
              name="editedText"
              class="form-control"
              style="height: 100px"
            >{{ this.text }}</textarea>
          </div>
          <input
            type="hidden"
            name="commentId"
            value="{{ this._id }}" 
          />
          <button class="btn btn-primary">Save</button>
        </form>
      {{/if}}
    {{/each}}
  </div>
</div>
